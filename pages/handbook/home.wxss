/* pages/handbook/home.wxss */
.pageSwiper {
  width: 100%;
  height: 100%;
}

.culturalSwiper {
  position: absolute;
  box-sizing: border-box;
}

swiper-item {
  box-sizing: border-box;
}

.culturalSwiperSlide {
  display: flex;
  color: white;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.cultural-img {
  width: 100%;
  height: 100%;
}

.culturalSwiper swiper-item {
  width: 100%;
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.culturalSwiper .wx-swiper-dot {
  position: relative;
  top: -20rpx;
  display: inline-flex;
  justify-content: space-between;
  border-radius: 50%;
  height: 15rpx;
  width: 15rpx;
  background: rgba(255, 255, 255, 0.35);
  box-shadow: 1px 3px 5px rgba(0, 0, 0, 0.35);
}

.culturalSwiper .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  border-radius: 50%;
}

.culturalSwiper .wx-swiper-dot-active {
  width: 30rpx;
  height: 12rpx;
  border: none;
  border-radius: 6rpx;
  background: rgba(255, 255, 255, 0.8);
}

.culturalSwiper .wx-swiper-dot-active::before {
  border-radius: 50%;
}
